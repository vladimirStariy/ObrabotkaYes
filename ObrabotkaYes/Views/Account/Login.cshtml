@model ObrabotkaYes.Domain.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-sm shadow-lg bg-light text-center pt-5 px-5 py-5 rounded-3" style="max-width: 400px">
    <div class="row">
            <form asp-action="Login">          
                <h1 class="display-5 pb-5">Войти</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group pb-3">
                    
                    <input asp-for="Login" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group pb-3">
                    
                    <input asp-for="Password" class="form-control" placeholder="Пароль"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group pb-3">
                    <input type="submit" value="Войти" class="form-control btn btn-dark" />
                </div>
            </form>
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
